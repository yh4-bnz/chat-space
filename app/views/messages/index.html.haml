#wrapper
  .content
    = render partial: "shared/sidebar"
    .main
      .header
        .group-info
          .group-info__title
            sampleグループ
          %ul{class: "group-info__members"}
            .group-info__members__title
              Member：
            %li{class: "group-info__members__member"}
              test Taro
        .header__edit-button
          edit
      .messages
        - for i in 1..14
          = render partial: "shared/messages", locals: { i: i }
      .forms
        %form{class: "form"}
          %input{class: "form__message", type: "text", placeholder: "type a message"}
          .form__uploader
            %label
              = fa_icon "image"
              %input{class: "form__uploader--hidden", type: "file"}
          %input{class: "form__submit", type: "submit", value: "Send"}
